# MIRAI-LABS 環境設定ファイル
# このファイルをコピーして .env として使用してください

# データベース設定
DB_HOST=localhost
DB_NAME=mirai_labs
DB_USER=mirai_user
DB_PASS=your_secure_password_here
DB_PORT=3306

# アプリケーション設定
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost
APP_NAME="MIRAI-LABS"

# JWT設定（32文字以上のランダムな文字列を設定）
JWT_SECRET=your_jwt_secret_key_32_chars_minimum

# セッション設定
SESSION_LIFETIME=3600
SESSION_NAME=MIRAI_SESSION

# メール設定
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=noreply@mirai-labs.org
MAIL_PASSWORD=your_mail_password
MAIL_FROM=noreply@mirai-labs.org
MAIL_FROM_NAME="MIRAI-LABS System"
MAIL_ENCRYPTION=tls

# ファイルアップロード設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=uploads
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,png,gif

# ログ設定
LOG_LEVEL=debug
LOG_PATH=logs

# セキュリティ設定
HTTPS_ONLY=false
CSRF_PROTECTION=true
PASSWORD_MIN_LENGTH=8

# API設定
API_RATE_LIMIT=1000
API_VERSION=v1

# バックアップ設定
BACKUP_PATH=/backup/mirai-labs
BACKUP_RETENTION_DAYS=30

# 本番環境での設定例（コメントアウト）
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://mirai-labs.org
# HTTPS_ONLY=true
# LOG_LEVEL=error